<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Escort Locator</title>
  <link href="/css/styles.css" rel='stylesheet'>
  <link rel="stylesheet" href="/css/header.css">
  <noscript><link rel="stylesheet" href="/css/header.css"></noscript>
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="https://fonts.cdnfonts.com/css/satoshi?display=swap">
  <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"></noscript>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.css"/>
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.Default.css"/>
  <style>
    .container #main #map { min-height: 90vh; position: relative; z-index: 1; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.1); margin: 10px; }
    .container #main select { margin: 20px auto; display: block; width: 90%; max-width: 400px; font-size: 16px; border-radius: 6px; border: 1px solid #ccc; }
    .container header nav .nav-wrapper div ul li a {
      color: black;
      transition: all .3s ease-in;
    }
    .container header nav .nav-wrapper div ul li a:hover {
      color: #444;
    }
    .sidebar-menu, .submenu {
      position: relative;
      z-index: 10;
    }
    #map-legend {
      background: #fff;
      padding: 10px 15px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      position: absolute;
      bottom: 20px;
      left: 20px;
      z-index: 999;
      font-size: 14px;
    }
    #map-legend ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    #map-legend li {
      display: flex;
      align-items: center;
      margin-bottom: 6px;
    }
    #map-legend img {
      width: 24px;
      height: 24px;
      margin-right: 8px;
    }
  </style>
</head>
<body>
<div class="container">
  <%- include('partials/header')  %>
  <section id="main">
    <select id="citySelect">
      <option value="">-- Select City --</option>
      <option value="Nairobi">Nairobi</option>
      <option value="Kiambu">Kiambu</option>
    </select>

<div id="map-legend">
  <h4>Legend</h4>
  <ul>
    <li><i class="fas fa-map-marker-alt" style="color:gold;"></i> Gold Tier</li>
    <li><i class="fas fa-map-marker-alt" style="color:#cd7f32;"></i> Bronze Tier</li>
    <li><i class="fas fa-map-marker-alt" style="color:blue;"></i> Standard Tier</li>
  </ul>
</div>

    <div id="map"></div>

  </section>
</div>
<%- include('partials/footer')  %>
<script defer src="/js/script.js"></script>
<script src="https://unpkg.com/slugify@1.6.6/slugify.js"></script>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
<script>
  const map = L.map('map').setView([-1.286389, 36.817223], 12); // Default to Nairobi

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  const markers = L.markerClusterGroup();

  // Define tier-based icons
 const goldIcon = L.divIcon({
  html: '<i class="fas fa-map-marker-alt" style="color:gold; font-size:24px;"></i>',
  iconSize: [24, 24],
  className: 'custom-div-icon'
});

const bronzeIcon = L.divIcon({
  html: '<i class="fas fa-map-marker-alt" style="color:#cd7f32; font-size:24px;"></i>',
  iconSize: [24, 24],
  className: 'custom-div-icon'
});

const defaultIcon = L.divIcon({
  html: '<i class="fas fa-map-marker-alt" style="color:blue; font-size:24px;"></i>',
  iconSize: [24, 24],
  className: 'custom-div-icon'
});

 function getIcon(tier) {
  if (tier === 'gold') return goldIcon;
  if (tier === 'bronze') return bronzeIcon;
  return defaultIcon;
}


  function loadEscorts(city = '', lat = null, lng = null) {
    let url = '/api/escorts';
    if (city) {
      url += `?city=${city}`;
    } else if (lat && lng) {
      url += `?lat=${lat}&lng=${lng}`;
    }

    fetch(url) {
      .then(res => res.json())
      .then(data => {
        markers.clearLayers();
        data.forEach(({ name, lat, lng, tier }) => {
        const marker = L.marker([lat, lng], {
	icon: getIcon(tier)}).bindPopup(`<strong>${name}</strong><br/>Tier: ${tier}`);
	  markers.addLayer(marker);
	});
  }

  document.getElementById('citySelect').addEventListener('change', e => {
    const city = e.target.value;
    loadEscorts(city);
  });

  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(pos => {
      const { latitude, longitude } = pos.coords;
      map.setView([latitude, longitude], 13);
      loadEscorts('', latitude, longitude);
    });
  } else {
    loadEscorts('Nairobi');
  }
</script>
</body>
</html>
