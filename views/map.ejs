cd<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Escort Locator</title>
  <link href="/css/styles.css" rel='stylesheet'>
  <link rel="stylesheet" href="/css/header.css">
  <noscript><link rel="stylesheet" href="/css/header.css"></noscript>
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.css"/>
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.Default.css"/>
  <style>
    .container #main #map { min-height: 70vh; }
    .container #main select { margin: 10px; padding: 5px; }
	.container header nav .nav-wrapper div ul li a{
		color: black;
		transition: all .3s ease-in
}
	.container header nav .nav-wrapper div ul li a:hover{
		color: #444;
}
	
  </style>
</head>
<body>
<div class="container">
<%- include('partials/header')  %>
<section id="main">
  <select id="citySelect">
    <option value="">-- Select City --</option>
    <option value="Nairobi">Nairobi</option>
    <option value="Kiambu">Kiambu</option>
  </select>

  <div id="map"></div>
</section>
</div>
 <%- include('partials/footer')  %>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
  <script>
    const map = L.map('map').setView([-1.286389, 36.817223], 12); // Default to Nairobi

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    const markers = L.markerClusterGroup();

    function getColor(tier) {
      if (tier === 'gold') return 'gold';
      if (tier === 'bronze') return 'red';
      return 'blue';
    }

    function loadEscorts(city = '', lat = null, lng = null) {
      let url = '/api/escorts';
      if (city) {
        url += `?city=${city}`;
      } else if (lat && lng) {
        url += `?lat=${lat}&lng=${lng}`;
      }

      fetch(url)
        .then(res => res.json())
        .then(data => {
          markers.clearLayers();
          data.forEach(({ name, lat, lng, tier }) => {
            const marker = L.circleMarker([lat, lng], {
              radius: 8,
              color: getColor(tier),
              fillOpacity: 0.8
            }).bindPopup(`<strong>${name}</strong><br/>Tier: ${tier}`);
            markers.addLayer(marker);
          });
          map.addLayer(markers);
        });
    }

    document.getElementById('citySelect').addEventListener('change', e => {
      const city = e.target.value;
      loadEscorts(city);
    });

    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(pos => {
        const { latitude, longitude } = pos.coords;
        map.setView([latitude, longitude], 13);
        loadEscorts('', latitude, longitude);
      });
    } else {
      loadEscorts('Nairobi');
    }
  </script>
</body>
</html>