      btn.addEventListener('click', () => {
        const id = btn.dataset.id;
        const updatedBookmarks = bookmarks.filter(item => item.id !== id);
        localStorage.setItem('bookmarkedEscorts', JSON.stringify(updatedBookmarks));
        btn.parentElement.remove();
