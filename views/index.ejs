    const id = icon.dataset.id;
    const name = icon.dataset.name;
    const img = icon.dataset.img;
    const phone = icon.dataset.phone

    const bookmarks = JSON.parse(localStorage.getItem('bookmarkedEscorts')) || []; // ✅ Fresh copy per click
